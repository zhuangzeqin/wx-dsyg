/* 导入阿里的字体样式 全局都可以使用 */
@import "./styles/iconfont.wxss";

/* 小程序不支持通配符‘*’ */
page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
/* 主题颜色 */
page{
  /* 主题颜色 */
  --ThemeColor:#0094ff;
  /* 统一定义字体大小 */
  /* 假设存在一个设计款是375 px*/
  /* 1px=2rpx */
  font-size: 28rpx;
}
image{
  width: 100%;
}
