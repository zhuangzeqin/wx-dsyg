/**index.wxss**/
.pyg_index .swiper_index {
  margin: 5rpx 10rpx;
}
.pyg_index .swiper_index swiper {
  width: 100%;
  height: calc(100vw*340/750);
}
.pyg_index .swiper_index swiper swiper-item {
  border-radius: 20rpx;
}
.pyg_index .swiper_index swiper swiper-item navigator image {
  width: 100%;
  border-radius: 20rpx;
}
.pyg_index .cate_index {
  display: flex;
  padding: 20rpx;
}
.pyg_index .cate_index navigator {
  flex: 1;
}
.pyg_index .cate_index navigator image {
  width: 100%;
}
.pyg_index .floor_index .floor_group .floor_title {
  padding: 10rpx 0;
}
.pyg_index .floor_index .floor_group .floor_title image {
  width: 100%;
}
.pyg_index .floor_index .floor_group .floor_list {
  overflow: hidden;
}
.pyg_index .floor_index .floor_group .floor_list navigator {
  float: left;
  width: 33.33%;
}
.pyg_index .floor_index .floor_group .floor_list navigator:nth-last-child(-n+4) {
  height: 27.72711207vw;
  border-left: 10rpx solid #ffffff;
}
.pyg_index .floor_index .floor_group .floor_list navigator:nth-child(2),
.pyg_index .floor_index .floor_group .floor_list navigator:nth-child(3) {
  border-bottom: 10rpx solid #ffffff;
}
.pyg_index .floor_index .floor_group .floor_list navigator image {
  width: 100%;
  height: 100%;
}
