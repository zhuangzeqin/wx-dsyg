/* pages/user/user.wxss */
page {
  background-color: #ececec;
}
.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  background-color: var(--ThemeColor);
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  top: 20%;
  text-align: center;
  transform: translateX(-50%);
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: white;
  margin-top: 40rpx;
}
.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  top: 20%;
  transform: translateX(-50%);
  border: 1px solid white;
  color: white;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 10rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  color: #666666;
  padding-bottom: 90rpx;
  position: absolute;
  width: 90%;
  left: 50%;
  top: -40rpx;
  transform: translateX(-50%);
}
.user_content .user_main .history_wrap {
  background-color: white;
  display: flex;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: red;
}
.user_content .user_main .order_wrap {
  background-color: white;
  margin-top: 30rpx;
}
.user_content .user_main .order_wrap .order_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #cccccc;
}
.user_content .user_main .order_wrap .order_content {
  display: flex;
}
.user_content .user_main .order_wrap .order_content navigator {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.user_content .user_main .order_wrap .order_content navigator .iconfont {
  color: red;
  font-size: 40rpx;
}
.user_content .user_main .order_address_wrap {
  margin-top: 30rpx;
  background-color: white;
  padding: 20rpx;
}
.user_content .user_main .app_info_wrap {
  margin-top: 30rpx;
  background-color: white;
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend_wrap {
  margin-top: 30rpx;
  background-color: white;
  padding: 20rpx;
}
