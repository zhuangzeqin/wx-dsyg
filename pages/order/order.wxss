/* pages/order/order.wxss */
.order_main .order_item {
  color: #666666;
  padding: 20rpx;
  border-bottom: 1rpx solid #cccccc;
}
.order_main .order_item .order_no_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order_main .order_item .order_price_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order_main .order_item .order_price_row .order_price_value {
  color: red;
  font-size: 32rpx;
}
.order_main .order_item .order_time_row {
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
}
.order_main .order_item .order_time_row .order_time_value {
  font-weight: 600;
}
