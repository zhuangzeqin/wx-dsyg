page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
}
.search_row input {
  height: 100%;
  background-color: white;
  flex: 4;
  margin: 0 20rpx;
  padding-left: 30rpx;
}
.search_row button {
  flex: 1;
  width: 90rpx;
  height: 100%;
  font-size: 26rpx;
  padding: 0;
  margin: 0 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search_content {
  margin-top: 30rpx;
}
.search_content .search_item {
  background-color: white;
  border-color: white;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1px solid #cccccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
