/* pages/category/category.wxss */
page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates_container .cates_leftMenu {
  flex: 2;
}
.cates .cates_container .cates_leftMenu .menu_item {
  height: 80rpx;
  display: flex;
  font-size: 30rpx;
  align-items: center;
  justify-content: center;
  color: #666666;
}
.cates .cates_container .cates_leftMenu .active {
  color: var(--ThemeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .cates_rightContent {
  flex: 5;
}
.cates .cates_container .cates_rightContent .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cates .cates_container .cates_rightContent .goods_group .goods_title .delimiter {
  color: #cccccc;
  padding: 0 10rpx;
}
.cates .cates_container .cates_rightContent .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .cates_rightContent .goods_group .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.cates .cates_container .cates_rightContent .goods_group .goods_list navigator image {
  width: 50%;
}
